<view class="bucket-container">
  <image
    class="bucket-image"
    src="{{bucket.pic}}"
    mode="aspectFill"
  >
  </image>
  <view class="bucket-right">
    <view class="bucket-name">{{bucket.name}}</view>
    <view
      class="bucket-option"
      wx:if="{{hasOptions}}"
    >{{optionText}}</view>
    <view class="bucket-bottom">
      <view class="bucket-price">{{'Â¥' + bucket.price}}</view>
      <view class="bucket-buttons">
        <image
          class="add-bucket"
          src="{{minusImage}}"
          mode="aspectFit"
          data-bid="{{bucket.bid}}"
          bindtap="minus"
        ></image>
        <text>{{bucket.options.length}}</text>
        <image
          class="add-bucket"
          src="{{addImage}}"
          mode="aspectFit"
          data-did="{{bucket.did}}"
          bindtap="add"
        ></image>
      </view>
    </view>
  </view>
</view>